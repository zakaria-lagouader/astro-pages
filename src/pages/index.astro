---
import "../styles/global.css"
const posts: Array<any> = await Astro.glob("../content/blog/*.md")
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
</head>
<body>
    <h1>Hello Word</h1>
    <main>
        {posts.map(({ frontmatter }) => (
            <li>
                <a href={`/astro-pages/blog/${frontmatter.slug}`}>{ frontmatter.title }</a>
            </li>
        ))}
    </main>


</body>
</html>